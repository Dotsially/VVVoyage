<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VVVoyage.MainPage">

    <Grid RowDefinitions="Auto, *">
        <StackLayout Grid.Row="0" Grid.RowSpan="2" x:Name="mapContainer" HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator IsRunning="True"/>
        </StackLayout>

        <HorizontalStackLayout Grid.Row="0" Margin="10">
            <Button
                x:Name="instructionsBtn"
                IsEnabled="False"
                ImageSource="help_circle.svg"
                Clicked="InstructionsButton_Clicked"
                HeightRequest="45"
                BackgroundColor="{StaticResource Primary}"
                Text="Help"
                TextColor="White"/>
            
            <Button
                x:Name="stopRouteBtn"
                IsEnabled="False"
                Text="Stop route"
                Clicked="StopRouteButton_Clicked"
                Margin="10,0"
                BackgroundColor="DarkRed"
                TextColor="White"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
